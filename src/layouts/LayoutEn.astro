---
import Header from "../components/Header.astro";
import "@fontsource-variable/outfit";
import "@fontsource/bangers";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="The portfolio of Daniel Castillo Balboa. FullStack programmer from Spain and Equatorial Guinea."
        />
        <meta name="viewport" content="width=device-width" />

        <!--Twitter tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta
            name="twitter:description"
            content="Estar al tanto de las últimas tendencias sobre diseño web es una de las prácticas de inspiración de los mejores profesionales."
        />
        <meta
            name="twitter:title"
            content="Inspiración para el diseño web: recursos online imprescindibles"
        />
        <meta name="twitter:image" content="/images/compartir.webp" />
        <meta name="twitter:creator" content="@Daniel_ccch" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body class="select-none">
        <div
            class="fixed top-0 -z-50 h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
        >
        </div>
        <Header />
        <main class="max-w-[1280px] mx-auto px-5 mt-20">
            <slot />
        </main>
    </body>
</html>
<style is:global>
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }

    h1,
    h2,
    h3,
    h4,
    h5 {
        @apply text-secondary;
    }

    h1,
    h2,
    h3 {
        font-family: "Bangers", system-ui;
        letter-spacing: 1px;
    }
    body {
        font-family: "Outfit Variable", sans-serif;
    }
</style>
